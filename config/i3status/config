order += "ipv6"
order += "wireless _first_"
order += "ethernet _first_"
order += "battery all"
order += "cpu_temperature 1"
order += "cpu_temperature 2"
order += "cpu_temperature 3"
order += "cpu_temperature 4"
order += "cpu_temperature 5"
order += "disk /"
order += "memory"
order += "tztime local"

wireless _first_ {
        format_up = "W: (%quality at %essid) %ip"
        format_down = "W: down"
}

ethernet _first_ {
        format_up = "E: %ip (%speed)"
        format_down = "E: down"
}

battery all {
        format = "%status %percentage %remaining"
}

cpu_temperature 1 {
        format = "CPU: %degrees째C"
        separator = false
}

cpu_temperature 2 {
        format = "%degrees째C"
        separator = false
}

cpu_temperature 3 {
        format = "%degrees째C"
        separator = false
}

cpu_temperature 4 {
        format = "%degrees째C"
}

memory {
        format = "RAM: %used / %available"
        threshold_degraded = "1G"
        format_degraded = "MEMORY < %available"
}

disk "/" {
        format = "Disk: %used / %total"
}


tztime local {
        format = "%Y-%m-%d %H:%M:%S"
}
